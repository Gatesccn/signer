import { Composer } from "grammy"
import { prisma } from "../index.js"
import { addToQueue } from "../etc/queue.js"

const composer = new Composer()

composer.on("message:document", async (ctx) => {
	//if(ctx.from.id == process.env.OWNER){
	const { message_id, chat, document } = ctx.message
	const size = Math.round(document?.file_size / 1024 / 1024)
	if(size > 150)
		return ctx.reply('‚ùå You"ve passed the 150MB google play limit! ‚öôÔ∏è')

	if (!document?.file_name?.endsWith(".apk")) return

	const exists = await prisma.queue.findFirst({
		where: {
			file_unique_id: document?.file_unique_id,
		},
	})
	const exists2 = await prisma.queue.findFirst({
		where: {
			chat_id: chat.id,
		},
	})
	
	const filename = document?.file_name
	var format = /[!@#$%^&*()_+\-=\[\]{};':"\\|,.<>\/?]+/;
	//if(filename.indexOf(' ') >= 0)
   //     return await ctx.reply("‚ùå Please remove the space from the name ü¶Ñ ELIMINA LOS ESPCIOS DEL AAB O PONELE UN NOMBRE SIMPLE")
	if(format.test(filename))
		return await ctx.reply("‚ùåIts not allowed any special character in the name of the file  CARACTERES SIMPLES \n‚ùåExample of the prohibited characters:\n\n\n"+ format)
	
	
	if (exists)
		return await ctx.reply("‚ùå This file is already in the queue, please wait... ü¶Ñ")
	
	if (exists2)
		return await ctx.reply("‚ùå Sorry only 1 APK at time, wait the first apk compile ! ü¶Ñ")
	
	const queue = await prisma.queue.findMany()
	if (queue.length > 0) {
		addToQueue({
			message_id,
			chat_id: chat?.id,
			filename: document?.file_name,
			file_unique_id: document?.file_unique_id,
		})
		ctx.reply(
			` ‚úÖ Your APK has been added to the queue current position: ${queue.length + 1} ü¶Ñ`,
			{
				reply_to_message_id: message_id,
			}
		)
		return
	}

	addToQueue({
		message_id,
		chat_id: chat?.id,
		filename: document?.file_name,
		file_unique_id: document?.file_unique_id,
	})
	//}else
	//	 return ctx.reply('Send to @gatesccn the bot is private because of scammers selling the acess to the bot')
	
})

export default composer
